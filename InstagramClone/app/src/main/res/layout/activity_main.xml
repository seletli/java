<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sign_up_activity_name_text"
        android:layout_width="215dp"
        android:layout_height="56dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="138dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_activity_password_text"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_activity_name_text"
        app:layout_constraintStart_toStartOf="@+id/sign_up_activity_name_text"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_activity_name_text" />

    <Button
        android:id="@+id/sign_up_activity_singin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:onClick="singIn"
        android:text="Sign in"
        app:layout_constraintBaseline_toBaselineOf="@+id/sign_up_activity_signup_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sign_up_activity_signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        android:onClick="singUp"
        android:text="Sing Up"
        app:layout_constraintStart_toEndOf="@+id/sign_up_activity_singin_button"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_activity_password_text" />
</androidx.constraintlayout.widget.ConstraintLayout>